<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentregisteruser"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.tesla.prasadshirsath.tesla.SignupDetails"
    android:background="@color/udelvr_blue"
    >
<RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
  >

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profilepic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/default_profile"
            app:border_color="#EEEEEE"
            app:border_width="4dp"
            app:shadow="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/fullname"
            android:textColorHint="@color/udelvr_hint_white"
            android:ems="10"
            android:id="@+id/editText_name"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/profilepic"
            android:textColor="@color/udelvr_white"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/editText_email"
            />


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_email"
            android:inputType="textEmailAddress"
            android:hint="@string/email"
            android:layout_marginTop="15dp"

            android:layout_below="@+id/editText_name"
            android:textColor="@color/udelvr_white"
            android:textColorHint="@color/udelvr_hint_white"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/mobilenumber"
            android:inputType="phone"
            android:layout_marginTop="15dp"


            android:id="@+id/editText_mobile"
            android:textColor="@color/udelvr_white"
            android:textColorHint="@color/udelvr_hint_white"
            android:layout_below="@+id/editText_email"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText_password"
            android:hint="@string/password"
            android:layout_marginTop="15dp"

            android:textColorHint="@color/udelvr_hint_white"
            android:layout_below="@+id/editText_mobile"
            android:layout_alignStart="@+id/editText_mobile"
            android:textColor="@color/udelvr_white"
            android:layout_alignEnd="@+id/editText_mobile" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Register"
        android:textColor="@color/udelvr_blue"
        android:id="@+id/button_register"
        android:background="@drawable/roundedgraybutton"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editText_password"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
