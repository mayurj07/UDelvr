<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="10dp"
    android:layout_height="match_parent"
    android:tint="@color/photo_tint"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/packageDestinationStaticMap"
            android:src="@drawable/udelvr_driver"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="San Mateo"
            android:layout_margin="5dp"
            android:id="@+id/destinationText"
            android:layout_alignBottom="@+id/packageDestinationStaticMap"
            android:layout_alignStart="@+id/packageDestinationStaticMap" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="5dp"
            android:text="$35"
            android:id="@+id/amountText"
            android:layout_below="@+id/packageDestinationStaticMap"
            android:layout_alignEnd="@+id/packageDestinationStaticMap" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="5dp"
            android:text="4th April 2015 12:30"
            android:id="@+id/dateTimeText"
            android:layout_below="@+id/packageDestinationStaticMap"
            android:layout_alignStart="@+id/packageDestinationStaticMap" />
        <!--Destination-->

        <!--date time-->


    </RelativeLayout>

</android.support.v7.widget.CardView>