<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentaddshipment"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.tesla.prasadshirsath.tesla.SignupDetails"
    android:background="@color/udelvr_white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:id="@+id/driver_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_alignEnd="@+id/datePicker_row">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/driver_license"
                android:textColorHint="@color/udelvr_hint_white"
                android:ems="10"
                android:id="@+id/driver_license"
                android:textColor="@color/black_overlay"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/default_profile"
                android:id="@+id/camera"/>
        </LinearLayout>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/expire_label"-->
            <!--android:text="Expire: "-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_below="@+id/driver_license"-->
            <!--android:layout_alignEnd="@+id/ho_layout" />-->

        <LinearLayout
            android:id="@+id/datePicker_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/driver_license"
            android:orientation="horizontal"
            android:layout_alignEnd="@+id/apply_btn">
            <EditText
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/date_expire"
                android:ems="10"
                android:id="@+id/input_expire_date"
                android:textColor="@color/black_overlay"
                android:textColorHint="@color/udelvr_hint_white"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/default_profile"
                android:id="@+id/datePicker"/>
        </LinearLayout>


        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/camera_license"-->
            <!--android:id="@+id/camera"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_below="@+id/ho_layout"-->
            <!--android:layout_alignEnd="@+id/apply_btn"/>-->

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            android:textColor="@color/udelvr_white"
            android:id="@+id/apply_btn"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/datePicker_row"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/udelvr_blue"/>
    </RelativeLayout>
</ScrollView>